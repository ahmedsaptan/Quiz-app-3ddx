
<div class="card card-body">
  <h3>Quiz</h3>
  <form action="/quizzes" method="POST">
    <div class="div form-group">
      <label for="title">Title</label>
      <input type="text" name="title" class="form-control" required value={{title}}>
    </div>
  
    <div class="div form-group">
      <label for="details">Details</label>
      <textarea name="details" class="form-control" required value={{details}} ></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Create New Quiz</button>
  </form>
</div>
